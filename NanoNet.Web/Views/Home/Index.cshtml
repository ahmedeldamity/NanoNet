@model IEnumerable<ProductViewModel>

@{
    ViewData["Title"] = "Home Page";
}

<form>
    <div class="container row">
        @foreach (var product in Model)
        {
            <div class="col-12 col-md-6 col-lg-3">
                <div class="p-0 my-3 rounded">
                    <div class="card border border-primary">
	                    <h3 class="card-title text-white-50 text-center py-2">@product.Name</h3>
	                    <div style="height: 400px;" class="d-flex justify-content-center align-items-center">
							<img style="width: 100%; max-height: 100%;" src="@product.ImageUrl" alt="@product.Name">
	                    </div>
		                <div class="card-body">
			                <div class="d-flex justify-content-between py-2">
				                <span class="text-danger" style="font-size:20px;">@($"{product.Price:c}")</span>
				                <span class="badge bg-warning text-white p-2">@product.CategoryName</span>
			                </div>
							<p style="max-height: 100%;" class="card-text">@Html.Raw(product.Description)</p>
			                <div class="row">
				                <div class="col">
					                <a asp-controller="Home" asp-action="ProductDetails" asp-route-productId="@product.Id"
					                   class="btn btn-success form-control">Details</a>
				                </div>
			                </div>
		                </div>
	                </div>
                </div>
            </div>
        }
    </div>
</form>
